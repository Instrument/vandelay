{% extends '_layouts/cp' %}

{% import '_includes/forms' as forms %}

{% set tabs = adminTabs %}
{% set selectedTab = 'orders' %}

{% set title = 'Translations'|t %}
{% set extraPageHeaderHtml = '<small class="acclarotranslations-version-header">' ~ 'Version'|t ~ ' ' ~ pluginVersion ~ '</small>' %}

{% includeCssResource "acclarotranslations/css/AcclaroTranslations.css" %}

{% set crumbs = [
    { label: 'Translations'|t, url: url('acclarotranslations') },
    { label: 'Orders'|t, url: url('acclarotranslations/orders') },
    { label: 'Reporting'|t, url: 'javascript:void(0)' },
] %}

{% block content %}

    <form class="acclarotranslations-order-reporting" action="{{ url('acclarotranslations/orders') }}">
        <h2>{{ 'Order Reporting'|t }}</h2>

        <table>
            <tbody>
                <tr>
                    <td>
                        <label for="sourceLanguage">{{ 'Source language'|t }}:</label>
                    </td>
                    <td>
                        {{ forms.selectField({
                            value: sourceLanguage,
                            options: {'':'Choose'|t ~ '...'}|merge(languages),
                            name: 'sourceLanguage',
                            id: 'sourceLanguage'
                        }) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="targetLanguage">{{ 'Target language'|t }}:</label>
                    </td>
                    <td>
                        {{ forms.selectField({
                            value: targetLanguage,
                            options: {'':'Choose'|t ~ '...'}|merge(languages),
                            name: 'targetLanguage',
                            id: 'targetLanguage'
                        }) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="startDate-date">{{ 'Start date'|t }}:</label>
                    </td>
                    <td>
                        {{ forms.dateField({
                            value: startDate,
                            name: 'startDate',
                            id: 'startDate',
                            placeholder: 'Choose'|t ~ '...'
                        }) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="endDate">{{ 'End date'|t }}:</label>
                    </td>
                    <td>
                        {{ forms.dateField({
                            value: endDate,
                            name: 'endDate',
                            id: 'endDate',
                            placeholder: 'Choose'|t ~ '...'
                        }) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="status">{{ 'Translation status'|t }}:</label>
                    </td>
                    <td>
                        {{ forms.selectField({
                            value: status,
                            options: {'':'Choose'|t ~ '...'}|merge(orderStatuses),
                            name: 'status',
                            id: 'status'
                        }) }}
                    </td>
                </tr>
            </tbody>
        </table>

        <input type="submit" class="btn submit" value="Go!">
    </form>

{% endblock %}
